<?xml version="1.0" encoding="UTF-8"?>
<robot name="test">
<!-- DESCIPTION OF PLANAR 3DOF ROBOT -->

  <!-- LINK DESCRIPTIONS -->
  <link name="world"/>
<!-- BASE LINK (LINK_0) -->
  <link name="link0">
    <inertial>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <mass value="0.4"/>
      <inertia ixx="0.000425"  ixy="0"  ixz="0" iyy="0.000425" iyz="0" izz="0.000425" />
    </inertial>
 
    <visual>
      <origin xyz="0 0 0.04" rpy="0 0 0" />
      <geometry>
        <box size="0.08 0.08 0.08" />
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
 
    <collision>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <geometry>
        <box size="0.08 0.08 0.08" />
      </geometry>
    </collision>
  </link>


  <!-- FIRST LINK (LINK_1) -->
  <link name="link1">
    <inertial>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <mass value="0.4"/>
      <inertia ixx="0.0048"  ixy="0"  ixz="0" iyy="0.0048" iyz="0" izz="0.00000664" />
    </inertial>
 
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0" />
      <geometry>
        <box size="0.01 0.01 0.2" />
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
 
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.2" />
      </geometry>
    </collision>
  </link>
  
  
  
  <!-- 2ND LINK (LINK_2)  -->
  <link name="link2">
    <inertial>
      <origin xyz="0 0 0.075" rpy="0 0 0"/>
      <mass value="0.4"/>
      <inertia ixx="0.0048"  ixy="0"  ixz="0" iyy="0.0048" iyz="0" izz="0.00000664" />
    </inertial>
 
    <visual>
      <origin xyz="0 0 0.075" rpy="0 0 0" />
      <geometry>
        <box size="0.01 0.01 0.15" />
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
 
    <collision>
      <origin xyz="0 0 0.06" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.15" />
      </geometry>
    </collision>
  </link>

  <!-- JOINT DESCIRPTIONS -->

  <!-- WORLD JOINT ( LINKS BASE TO WORLD ) -->
    <joint name="fixed" type="fixed">
      <parent link="world"/>
      <child link="link0"/>
    </joint> 
    <!-- FIRST JOINT (JOINT_0) -->
    <joint name="joint1" type="revolute">
      <parent link="link0"/>
      <child link="link1"/>
      <origin xyz="0 0 .08" rpy="0 0 0" />
      <axis xyz="1 0 0" />
      <limit lower="-1.571" upper="1.571" effort="10" velocity="1.0" />   
    </joint>
    <!-- SECOND JOINT (JOINT_2) -->
    <joint name="joint2" type="revolute">
      <parent link="link1"/>
      <child link="link2"/>
      <origin xyz="0 0 .2" rpy="0 0 0" />
      <axis xyz="1 0 0" />
      <limit lower="-1.571" upper="1.571" effort="10" velocity="1.0" />   
    </joint>
    <!-- GAZEBO PLUGINS -->
    <gazebo>
      <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
        <robotNamespace>/test</robotNamespace>
      </plugin>
    </gazebo>
    

</robot>